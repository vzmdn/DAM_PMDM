<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/equipo_escudo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/equipo_escudo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/equipo_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "Levante U.D."
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/equipo_entrenador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Julián Calero"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/equipo_estadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ciutat de València"
            android:textAlignment="textEnd"
            android:textSize="11sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>